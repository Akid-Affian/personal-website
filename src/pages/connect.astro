---
import Icon from "../components/Icon.astro";
import "@fontsource/berkshire-swash";
import "@fontsource-variable/dm-sans";
import "@fontsource-variable/playwrite-fr-moderne";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta
            name="description"
            content="Akid Affian's portfolio website. Akid is a Junior Fullstack Developer, passionate about building web
            applications that just work."
        />
        <title>Akid Affian Portfolio - Connect</title>
        <style>
            .berkshire-swash {
                font-family: "Berkshire Swash", cursive;
            }
            .text-stroke-white {
                color: white;
                -webkit-text-stroke: 1px black;
                text-stroke: 1px black;

                -webkit-text-stroke: 0.6px black;
                text-stroke: 0.6px black;
            }
            .dm-sans {
                font-family: "DM Sans Variable", sans-serif;
                font-weight: 300;
            }
            .playwrite {
                font-family: "Playwrite FR Moderne Variable", cursive;
            }
        </style>
    </head>
    <body>
        <div class="text-center flex items-center justify-center">
            <h1
                class="berkshire-swash text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-snug sm:leading-tight flex items-center mt-10"
            >
                <span class="text-stroke-white">Akid</span>
                <span class="ml-2 text-[#292420]">Affian</span>
                <Icon name="bomb" size={64} rotation={10} class="ml-6" />
            </h1>
        </div>

        <div class="flex flex-col items-center justify-center mt-10 space-y-6">
            <a href="/" target="_blank">
                <button
                    class="bg-purple-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-purple-700 transition-colors duration-300 w-64"
                >
                    Website
                </button>
            </a>

            <a
                href="https://www.linkedin.com/in/akid-affian-507188186/"
                target="_blank"
            >
                <button
                    class="bg-blue-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors duration-300 w-64"
                >
                    LinkedIn
                </button>
            </a>

            <a href="https://github.com/Akid-Affian" target="_blank">
                <button
                    class="bg-gray-800 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-gray-900 transition-colors duration-300 w-64"
                >
                    GitHub
                </button>
            </a>

            <a href="mailto:mail@akid.my">
                <button
                    class="bg-green-600 text-white px-6 py-3 rounded-lg text-lg font-semibold hover:bg-green-700 transition-colors duration-300 w-64"
                >
                    Email
                </button>
            </a>
        </div>
    </body>
</html>
